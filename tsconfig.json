{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "removeComments": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["."],
  "types": ["node"],
  "exclude": []
}